<% if (user.isAdmin) { %>
<form action="/add-savings" method="post" class="mt-4">
  <div class="form-group">
    <label for="accountName" class="form-label">Account Name:</label>
    <input
      type="text"
      id="accountName"
      name="accountName"
      class="form-control"
      required
    />
  </div>
  <div class="form-group">
    <label for="amount" class="form-label">Amount:</label>
    <input
      type="number"
      id="amount"
      name="amount"
      class="form-control"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Add Savings</button>
</form>
<% } %>
