<div class="container mt-5">
  <div class="header text-center mb-4">
    <h1>Welcome to Penny Pal, <%= user.name %>!</h1>
    <hr class="mt-3" />
  </div>

  <div class="text-center mb-4">
    <% if (user.isAdmin) { %>
    <div class="admin-button">
      <a href="/admin" class="btn btn-primary">Admin</a>
    </div>
    <% } %>
    <form action="/logout" method="GET">
      <button type="submit" class="btn btn-primary mt-3">Logout</button>
    </form>
    <div class="last-updated mt-5 mb-3">
      <small>Last Updated: <%= new Date().toLocaleString() %></small>
    </div>
    <hr />
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="savings">
        <h2>Savings</h2>
        <h3>Total: $<%= getTotalSavingsAmount(savings).toLocaleString() %></h3>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Account Name</th>
                <th scope="col">Amount</th>
                <% if (user.isAdmin) { %>
                <th scope="col">Actions</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% const sortedSavings = savings.sort((a, b) => b.amount -
              a.amount); %> <% sortedSavings.forEach(saving => { %>
              <tr>
                <td><%= saving.accountName %></td>
                <td>$<%= saving.amount.toLocaleString() %></td>
                <% if (user.isAdmin) { %>
                <td>
                  <form action="/update-saving/<%= saving._id %>" method="POST">
                    <div class="input-group">
                      <input
                        type="number"
                        name="newAmount"
                        value="<%= saving.amount %>"
                        class="form-control"
                      />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-warning">
                          Update
                        </button>
                      </div>
                    </div>
                  </form>
                  <form
                    action="/delete-saving/<%= saving._id %>"
                    method="POST"
                    class="mt-2"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
                <% } %>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="debt mt-4">
        <h2>Debt</h2>
        <h3>Total: $<%= getTotalDebtAmount(debt).toLocaleString() %></h3>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Account Name</th>
                <th scope="col">Amount</th>
                <% if (user.isAdmin) { %>
                <th scope="col">Actions</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% const sortedDebt = debt.sort((a, b) => b.amount - a.amount); %>
              <% sortedDebt.forEach(debtItem => { %>
              <tr>
                <td><%= debtItem.accountName %></td>
                <td>$<%= debtItem.amount.toLocaleString() %></td>
                <% if (user.isAdmin) { %>
                <td>
                  <form action="/update-debt/<%= debtItem._id %>" method="POST">
                    <div class="input-group">
                      <input
                        type="number"
                        name="newAmount"
                        value="<%= debtItem.amount %>"
                        class="form-control"
                      />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-warning">
                          Update
                        </button>
                      </div>
                    </div>
                  </form>
                  <form
                    action="/delete-debt/<%= debtItem._id %>"
                    method="POST"
                    class="mt-2"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
                <% } %>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
