<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="edit-accounts-form">
        <h2>Edit Accounts</h2>
        <form
          action="/update-accounts/<%= account.type %>/<%= account._id %>"
          method="post"
        >
          <% accounts.forEach(account => { %>
          <div class="form-group">
            <label for="<%= account.accountName %>"
              ><%= account.accountName %>:</label
            >
            <input
              type="number"
              id="<%= account.accountName %>"
              name="amount_<%= account._id %>"
              value="<%= account.amount %>"
            />
            <input type="hidden" name="accountId" value="<%= account._id %>" />
            <!-- Add hidden input for account ID -->
          </div>
          <% }); %>
          <button type="submit" class="btn btn-primary">Update Accounts</button>
        </form>
      </div>
    </div>
  </div>
</div>
